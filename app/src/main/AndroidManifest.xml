<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.geekbrains.nasapictureoftheday">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NASAPictureOfTheDayCustom">
        <activity
            android:name=".api.ApiActivity"
            android:label="@string/title_activity_api"
            android:theme="@style/Theme.NASAPictureOfTheDayCustom.NoActionBar"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.NASAPictureOfTheDay.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".recycler.RecyclerActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>